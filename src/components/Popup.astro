---
import { Icon } from "astro-icon";
const { boxes } = Astro.props;
const boxCount = boxes
  .map(
    (_, index) => `<div class="box box-${index + 1}">.box-${index + 1}</div>`
  )
  .join("\n\t");
const htmlContent = `<div class="container">
  ${boxCount}
</div>`;
const htmlContentAlt = `<div class="container">
  <div class="box box-1">.box-1</div>
  ...
</div>`;
---

<details class="popup">
  <summary>
    <Icon name="lucide:file-code" />
    <!-- <svg width="16" height="16">
        <use href="#help"></use>
        </svg> -->
    HTML
  </summary>
  <div>
    <!-- <Prism lang="html" code={htmlContent} />   -->
    <textarea aria-label="HTML code" class="prism-live language-html"
      >{boxes.length > 1 ? htmlContent : htmlContentAlt}</textarea
    >
  </div>
</details>

