---
import { Icon } from "astro-icon";
const { label = "", linkTo = "/" } = Astro.props;
const year = new Date().getFullYear();
---

<footer>
  <!-- <div class="exercise-logo">
            <Icon name="lucide:layout-dashboard" width="28" height="28" />
        </div> -->
  <a href={linkTo} class="more-exercises"
    >Prøv også {label} <Icon name="lucide:chevron-right" width="24" />
  </a>

  <small><span class="dbclick">© {year}&nbsp;Vinther.codes</span></small>
</footer>

<style lang="scss">
  :global(html:not([data-extra="true"])) .more-exercises {
    display: none;
  }

  a {
    color: #fff;
    text-decoration: none;
    padding: var(--space-3) var(--space-3) var(--space-3) var(--space-5);
    border: 2px solid var(--blue-500);
    inline-size: fit-content;
    place-self: center;
    border-radius: var(--bdrs-round);
    transition: 0.2s;

    svg {
      color: #a9bcce;
      display: inline-block;
      vertical-align: middle;
      transition: inherit;
    }

    &:hover {
      border-color: #a9bcce;
      color: var(--blue-500);

      svg {
        color: var(--blue-500);
      }
    }
  }
  .dbclick {
    cursor: pointer;
  }
  .dbclick:hover {
    color: #fff;
  }
</style>

<script>
  const footerBtn = document.querySelector(".dbclick");

  footerBtn.addEventListener("dblclick", (e) => {
    document.documentElement.dataset.extra = "true";
    document
      .querySelectorAll("section[data-extra='true']")[0]
      .scrollIntoView({ behavior: "smooth" });
  });
</script>

