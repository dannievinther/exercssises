---
import { Icon } from "astro-icon";
const { label = "", linkTo = "/" } = Astro.props;
const year = new Date().getFullYear();
---

<div>
  <button class="load-more">Indlæs flere</button>
</div>

<footer>
  <a href={linkTo} class="more-exercises">Prøv også {label}</a>

  <small><span class="dbclick">© {year}&nbsp;Vinther.codes</span></small>
</footer>

<style lang="scss">
  :global(html:not([data-extra="true"])) .more-exercises {
    display: none;
  }

  button {
    all: unset;
    cursor: pointer;
  }

  a {
    color: #fff;
    text-decoration: none;
    padding: var(--space-3) var(--space-3) var(--space-3) var(--space-5);
    border: 2px solid var(--blue-500);
    inline-size: fit-content;
    place-self: center;
    border-radius: var(--bdrs-round);
    transition: 0.2s;

    svg {
      color: #a9bcce;
      display: inline-block;
      vertical-align: middle;
      transition: inherit;
    }

    &:hover {
      border-color: #a9bcce;
      color: var(--blue-500);

      svg {
        color: var(--blue-500);
      }
    }
  }

  div {
    text-align: center;
    padding: var(--space-7) var(--space-5) 0;
  }
  .load-more {
    cursor: pointer;
    padding: var(--space-1) var(--space-3);
    font-weight: 500;
    font-family: "Mona Sans", "Wotfard", Segoe UI, system-ui, -apple-system,
      sans-serif;
  }
  .load-more:is(:hover, :focus-visible) {
    text-decoration: underline;
  }

  :global([data-extra="true"]) .load-more {
    display: none;
  }
</style>

<script>
  import "../js/loadmore";
</script>
