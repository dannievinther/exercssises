---
import BaseLayout from "../layouts/Base.astro";
import Exercise from "../components/Exercise.astro";
const localData = await Astro.glob("../exercises/grid/*.md");
---

<!DOCTYPE html>
<BaseLayout title="Grid-exercises">
  {
    localData.map((ex, i) => (
      <Exercise
        dataSuffix="grid"
        data={ex}
        num={i + 1}
        all={localData.length}
      />
    ))
  }
</BaseLayout>
